<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Snack"
    android:background="#efefef"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Snack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/backHome"
                android:layout_marginLeft="196dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:text="Back to Home"
                android:textAllCaps="false"
                android:textSize="16dp"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:background="@drawable/header"
        android:layout_width="match_parent"
        android:layout_height="130dp"/>

    <!-- kartu-->
    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="-130dp"
        android:background="@drawable/splash"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <!-- foto kartu -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:cropToPadding="true"
                android:src="@drawable/chitato" />

        </LinearLayout>

        <!-- text kartu -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:text="Khusus Hari ini!!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Chitato Sapi Panggang 120 Gr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/harga"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Rp. 2.400 Rp. 1.500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:background="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                android:text="Beli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <!-- footer -->
    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@color/white"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="Produk Snack"
        android:textSize="20dp"
        android:textStyle="bold">
    </TextView>

    <!-- kartu2-->
    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/splash"
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <!-- foto kartu2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:cropToPadding="true"
                android:src="@drawable/lays" />

        </LinearLayout>

        <!-- text kartu2 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Lays Classic 120 Gr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Rp. 2.400"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:background="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                android:text="Beli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>